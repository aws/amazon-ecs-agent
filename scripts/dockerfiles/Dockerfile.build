FROM golang:1.12
MAINTAINER Amazon Web Services, Inc.

ENV XDG_CACHE_HOME /tmp

RUN apt-get update && \
    apt-get install -y --no-install-recommends gcc-mingw-w64

RUN mkdir -p /go/src/github.com/aws/

WORKDIR /go/src/github.com/aws/amazon-ecs-agent

CMD ["make", "static"]
